@model FeedbackDashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
        <i class="bi bi-speedometer2 me-2 text-primary"></i>HR Dashboard
    </h1>
    <div>
        <a class="btn btn-primary" asp-controller="Feedback" asp-action="Create">
            <i class="bi bi-plus-circle me-2"></i>Add Feedback
        </a>
        <a class="btn btn-outline-primary" asp-controller="Feedback" asp-action="Index">
            <i class="bi bi-list-ul me-2"></i>View All
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-clipboard-data text-primary fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Feedback</h6>
                        <h3 class="mb-0">@Model.TotalFeedbacks</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-star-fill text-success fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Average Rating</h6>
                        <h3 class="mb-0">@Model.AverageRating.ToString("F1")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-hand-thumbs-up text-info fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Recommendations</h6>
                        <h3 class="mb-0">@Model.RecommendationCount</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-percent text-warning fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Recommendation Rate</h6>
                        <h3 class="mb-0">@((Model.TotalFeedbacks > 0 ? (Model.RecommendationCount * 100.0 / Model.TotalFeedbacks) : 0).ToString("F0"))%</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Recent Feedback -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recent Feedback
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentFeedbacks.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Candidate</th>
                                    <th>Position</th>
                                    <th>Rating</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feedback in Model.RecentFeedbacks)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>@feedback.CandidateName</strong>
                                                <br>
                                                <small class="text-muted">@feedback.CandidateEmail</small>
                                            </div>
                                        </td>
                                        <td>@feedback.Position</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi bi-star@(i <= feedback.OverallRating ? "-fill text-warning" : " text-muted") me-1"></i>
                                                }
                                                <span class="ms-2">@feedback.OverallRating.ToString("F1")</span>
                                            </div>
                                        </td>
                                        <td>@feedback.InterviewDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary" asp-controller="Feedback" asp-action="Details" asp-route-id="@feedback.Id">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="text-muted mt-3">No feedback submitted yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="col-lg-4">
        <!-- Position Statistics -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h6 class="mb-0">
                    <i class="bi bi-briefcase me-2"></i>Feedback by Position
                </h6>
            </div>
            <div class="card-body">
                @if (Model.PositionStats.Any())
                {
                    @foreach (var stat in Model.PositionStats.Take(5))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-truncate me-2">@stat.Key</span>
                            <div class="d-flex align-items-center">
                                <div class="progress me-2" style="width: 60px; height: 8px;">
                                    <div class="progress-bar bg-primary" style="width: @((stat.Value * 100.0 / Model.TotalFeedbacks).ToString("F0"))%"></div>
                                </div>
                                <span class="badge bg-light text-dark">@stat.Value</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No data available</p>
                }
            </div>
        </div>

        <!-- Interviewer Ratings -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h6 class="mb-0">
                    <i class="bi bi-person-badge me-2"></i>Top Interviewers
                </h6>
            </div>
            <div class="card-body">
                @if (Model.InterviewerRatings.Any())
                {
                    @foreach (var rating in Model.InterviewerRatings.OrderByDescending(r => r.Value).Take(5))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-truncate me-2">@rating.Key</span>
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= rating.Value ? "-fill text-warning" : " text-muted") me-1" style="font-size: 0.8rem;"></i>
                                }
                                <span class="ms-2 small">@rating.Value.ToString("F1")</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No data available</p>
                }
            </div>
        </div>
    </div>
</div>