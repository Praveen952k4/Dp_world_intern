@model IEnumerable<InterviewFeedback>
@{
    ViewData["Title"] = "All Feedback";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-0">
        <i class="bi bi-list-ul me-2 text-primary"></i>All Interview Feedback
    </h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>Add New Feedback
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search Candidate</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Name or email..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Position</label>
                <input type="text" class="form-control" name="position" value="@ViewData["PositionFilter"]" placeholder="Position..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Interviewer</label>
                <input type="text" class="form-control" name="interviewer" value="@ViewData["InterviewerFilter"]" placeholder="Interviewer..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" class="form-control" name="fromDate" value="@ViewData["FromDateFilter"]" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" class="form-control" name="toDate" value="@ViewData["ToDateFilter"]" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Feedback Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Candidate</th>
                            <th>Position</th>
                            <th>Interviewer</th>
                            <th>Interview Date</th>
                            <th>Overall Rating</th>
                            <th>Average Rating</th>
                            <th>Recommend</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@item.CandidateName</strong>
                                        <br>
                                        <small class="text-muted">@item.CandidateEmail</small>
                                    </div>
                                </td>
                                <td>@item.Position</td>
                                <td>@item.InterviewerName</td>
                                <td>@item.InterviewDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= item.OverallRating ? "-fill text-warning" : " text-muted") me-1"></i>
                                        }
                                        <span class="ms-1">@item.OverallRating</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.AverageRating.ToString("F1")</span>
                                </td>
                                <td>
                                    @if (item.WouldRecommend)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>No
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@item.SubmittedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-4 text-muted"></i>
                <h5 class="mt-3 text-muted">No feedback found</h5>
                <p class="text-muted">Try adjusting your search criteria or add new feedback.</p>
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-circle me-2"></i>Add First Feedback
                </a>
            </div>
        }
    </div>
</div>

@if (Model.Any())
{
    <div class="mt-3">
        <small class="text-muted">
            Showing @Model.Count() feedback entries
        </small>
    </div>
}